---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Haas Grot Text R Web", "Helvetica Neue", Helvetica, Arial, sans-serif;
		font-weight: 600;
		
		.dailypost-container{
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: space-between; /* 讓內容撐開，.option 會在底部 */
    		height: 100%; 
		}
		.daily-container{
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			gap: 1rem;
			margin: 1.2rem;
		}

		.day-record {
			display: flex;
			flex-direction: column;
			align-items: center;
			height: 400px;
			width: 300px;
			background: blanchedalmond;
			border-radius: 10px;
			padding: 20px;
			position: relative;
			transform: perspective(800px) rotateY(-15deg);
			box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2);
			transition: transform 0.5s ease-in-out;
			margin: 1rem;
		}
		.day-record:hover {
			transform: perspective(800px) rotateY(0deg);
		}
		.daily-detail{
			width: 100%;
			padding: 1rem;
		}
		.daily-img{
			border-radius: 15px;
			width: 100%;
			height: 200px;
		}
		#daily-post{
			display: flex;
			flex-direction: column;
			padding: 0.5rem;
			gap:0.3rem;
		}
		.daily-title, .daily-date, .daily-age, .daily-description{
			border: none;
			background-color: transparent;
			font-size: 1.1rem;
			padding: 0.2rem;
		}
	
		.edite-btn,.favorite-btn,.delete-btn{
			color: #EA4C89;
			background: none;
			border: none;
			outline: none;
			padding: 5px 10px;
			font-size: 16px;
			cursor: pointer;
		}

		.edite-btn:hover,.favorite-btn:hover,.delete-btn:hover {
			text-decoration: underline; /* 懸停時增加底線 */
			color: rgb(47, 79, 79);  /* 變換顏色 */
		}
		.daily-option{
			width: 100%;
			display: flex;
			justify-content: space-between;
			margin-top: 1rem;
		}

		
	}
	
</style>
